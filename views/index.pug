extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    if user
      div
        a(href="/logout") #{user.username} をログアウト
      div
        a(href="/transcriptions/new") 予定を作る
      - var hasTranscription = transcriptions
      if hasTranscription
        h3 あなたの作った原稿一覧
        table.table
          tr
            th 原稿名
            th 更新日時
          each transcription in transcriptions
            tr
              td
                a(href=`/transcriptions/${transcription.transcriptionId}`) #{transcription.transcriptionName}
              td #{transcription.updatedAt}
    else
      div
        a(href="/login") ログイン