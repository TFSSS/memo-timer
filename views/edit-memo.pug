extends layout

block content
  h1 メモの編集画面
  form(method="post", action=`/transcriptions/${memo.transcriptionId}/edit/${memo.candidateId}`).my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="order") 順番
      input(type="number" name="order" value=memo.order).form-control
    div.form-group
      label(for="time") 時間
      input(type="number" name="time" value=memo.time).form-control
    div.form-group
      label(for="content") 内容
      textarea(name="content").form-control
    button(type="submit").btn.btn-info 提出